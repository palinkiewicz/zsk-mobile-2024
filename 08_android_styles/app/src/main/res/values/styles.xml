        <item name="android:textColor">#009900</item>
    </style>
    <style name="GreenText.Large">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="GreenText.Tiny">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="PinkBackground">
        <item name="android:background">#FFDCDC</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="PinkButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">#FFC0CB</item>
        <item name="android:textColor">#A020F0</item>
        <item name="android:layout_gravity">center</item>
